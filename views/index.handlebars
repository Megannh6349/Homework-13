<h1>Eat-Da-Burger!</h1>
<h6>Really? This is what I have to call it? Test</h6>

<div class="row">
    <div class="col-md-5">
        <h4>Some burgers to devour</h4>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-group-item">
                <div class="input-group">
                    <p> {{this.burger_name}} </p>
                    <span class="input-group-btn">
                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn btn-default btn-sm" type="submit">Devour!</button>
                        </form>
                    </span>
                </div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-5">
        <h4>Burger graveyard</h4>
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <p>{{this.burger_name}} </p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <p>Enter the name of a burger that sounds really good, and then hit submit</p>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <textarea class="form-control input-md" type="text" name="name" rows="4"> </textarea>
                </div>
                <button type="submit">Add</button>
            </form>
        </div>
    </div>